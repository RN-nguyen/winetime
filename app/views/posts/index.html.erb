
<h1>Rebecca's Blog</h1>
  <% @posts.each do |post| %>
  <div class= "blog">
   <p><strong><%= post.title %></strong></p>
  </div>


<div class="blog-text">
    <%= post.content %>
  </br>
  </br>
    <% if author_signed_in? %>
    <%= link_to 'View', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% else %>
    <%= link_to 'View', post %>
    <% end %>
</div>
 
  
<% end %>

</br>
<%= link_to 'Make New Post', new_post_path %>
